#include <stdio.h>
int main() {
    // Declaração das variáveis para a Carta 1 - Manaus
    char estado1 = 'A';
    char codigo1[] = "A01";
    char nomeCidade1[] = "Manaus";
    int populacao1 = 2063689;
    float area1 = 11401.00;
    float pib1 = 8399.37; // Em bilhões
    int pontosTuristicos1 = 8;

    // Declaração das variaveis para a Carta 2 - Belém
    char estado2 = 'B';
    char codigo2[] = "B02";
    char nomeCidade2[] = "Belem";
    int populacao2 = 1303403;
    float area2 = 1059.46;
    float pib2 = 4537.00; // Em bilhões
    int pontosTuristicos2 = 7;

    // Exibição das informações da Carta 1- Manaus
    printf("Carta 1:\n");
    printf("Estado: %c\n", estado1);
    printf("Código: %s\n", codigo1);
    printf("Nome da Cidade: %s\n", nomeCidade1);
    printf("População: %d\n", populacao1);
    printf("Área: %.2f km²\n", area1);
    printf("PIB: %.2f bilhões de reais\n", pib1);
    printf("Número de Pontos Turísticos: %d\n\n", pontosTuristicos1);

    // Exibição das informações da Carta 2 - Belém
    printf("Carta 2:\n");
    printf("Estado: %c\n", estado2);
    printf("Código: %s\n", codigo2);
    printf("Nome da Cidade: %s\n", nomeCidade2);
    printf("População: %d\n", populacao2);
    printf("Área: %.2f km²\n", area2);
    printf("PIB: %.2f bilhões de reais\n", pib2);
    printf("Número de Pontos Turísticos: %d\n", pontosTuristicos2);

    return 0;
}
